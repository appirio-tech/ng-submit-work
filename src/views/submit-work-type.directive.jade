loader(ng-show="vm.loading")

form(ng-submit="vm.save()")
  input(type="text" placeholder="Name your project..." required="true" ng-model="vm.work.name")

  hr

  h4 Devices

  ul
    li
      checkbox(label="iPhone 5c" ng-model="vm.work.devices.iPhone5c")

    li
      checkbox(label="iPhone 5s" ng-model="vm.work.devices.iPhone5s")

  h4 Orientation

  ul
    li
      checkbox(label="Landscape" ng-model="vm.work.orientation.landscape")

    li
      checkbox(label="Portrait" ng-model="vm.work.orientation.portrait")

  h4 OS

  ul
    li
      checkbox(label="iOS 7" ng-model="vm.work.os.iOS7")

    li
      checkbox(label="iOS 8" ng-model="vm.work.os.iOS8")

  h3 Are you looking for design and development?

  ul
    li
      button(
        type="button"
        ng-click="vm.toggleType('Design')"
        ng-class="{success: vm.work.requestType == 'Design' || vm.work.requestType == 'Both'}"
      ) Design

    li
      button(
        type="button"
        ng-click="vm.toggleType('Code')"
        ng-class="{success: vm.work.requestType == 'Code' || vm.work.requestType == 'Both'}"
      ) Development

  hr

  h3 Can you share a brief overview?

  textarea(placeholder="E.g. I need a mobile HR application with social features to support my growing organization" ng-model="vm.work.summary")

  ul
    li
      button(type="submit") Save

    li
      button(type="button" ng-click="vm.createProject()") Create Project

modal(show="vm.showSuccessModal")
  .success
    h2 Awesome!

    p Your {{ vm.work.name }} is set up now

    p Share your email to signup and we'll be sure to send a project link.

    form
      input(type="email" required=true)

      button(type="submit") Submit
