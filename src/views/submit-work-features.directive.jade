h2 What features does your app need?

h3 Select from our list, or describe your own.

form(name="featureForm", ng-submit="vm.submit()")
  ul.features
    li(ng-repeat="feature in vm.features")
      input(
        id="{{ 'submit-work-feature-' + $index }}"
        type="checkbox"
        ng-model="feature.checked"
        ng-change="vm.checked()"
      )

      .label-example
        label(for="{{ 'submit-work-feature-' + $index }}") {{ feature.name }}

        button.clean(
          ng-if="!feature.custom",
          type="button",
          ng-click="vm.clickExample()",
          title="View example"
        )

        button.x(
          ng-if="feature.custom",
          type="button",
          ng-click="vm.deleteFeature($index)"
        ) x

      .desc {{ feature.description }}

      textarea(placeholder="explain briefly (optional)", ng-show="feature.checked", ng-model="feature.explanation")

    li
      input(id="submit-work-features-new" type="checkbox" ng-model="vm.newFeature")

      .label-example
        label(for="submit-work-features-new") Additional Features

      .desc Tell us about other features you need that are not listed here.

  .new-feature(ng-show="vm.newFeature")
    .title
      input(
        type="text",
        ng-model="vm.newFeatureName",
        placeholder="Name",
        ng-enter="vm.add()"
      )

    .explanation-n-add
      textarea(
        type="text",
        ng-model="vm.newFeatureExplanation",
        ng-enter="vm.add()",
        placeholder="Explanation"
      )

      button(type="button", ng-click="vm.add()") +

  button.submit(type="submit", ng-show="featureForm.$valid") NEXT

.example.layout-modal(ng-modal="showExample")
  button.clean.close(type="button", ng-click="showExample = false")

